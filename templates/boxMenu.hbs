{{import_globals}}

<div class="boxmenu__container">
  <div class='boxmenu__container-inner'>

    <div class="boxmenu__header">
      <div class="boxmenu__header-inner">

        {{#if displayTitle}}
        <div class="boxmenu__title">

          {{#unless _disableAccessibleState}}
          <div class="js-heading"></div>
          {{/unless}}

          <div class="boxmenu__title-inner" {{#unless _disableAccessibleState}}aria-hidden="true"{{/unless}}>
            {{{compile displayTitle}}}
          </div>

        </div>
        {{/if}}

        {{#if body}}
        <div class="boxmenu__body">
          <div class="boxmenu__body-inner">
            {{{compile body}}}
          </div>
        </div>
        {{/if}}

        {{#if instruction}}
        <div class="boxmenu__instruction">
          <div class="boxmenu__instruction-inner">
            {{{compile instruction}}}
          </div>
        </div>
        {{/if}}

      </div>
    </div>

    <div class="boxmenu__item-container">
      <div class="boxmenu__item-container-inner js-children" role="list">
        {{!-- Menu items render here --}}
      </div>
    </div>

  </div>
</div>
